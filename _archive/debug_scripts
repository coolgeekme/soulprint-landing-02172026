// Add demo API key for Elon demo user
require('dotenv').config({ path: '.env.local' });
const { createClient } = require('@supabase/supabase-js');
const { createHash } = require('crypto');

const supabase = createClient(
    process.env.NEXT_PUBLIC_SUPABASE_URL,
    process.env.SUPABASE_SERVICE_ROLE_KEY
);

async function addDemoApiKey() {
    const demoUserId = 'dadb8b23-5684-4d86-9021-e457267e75c7';
    const demoKey = 'sk-soulprint-demo-internal-key';
    const hashedKey = createHash('sha256').update(demoKey).digest('hex');
    
    console.log('Adding API key for demo user:', demoUserId);
    console.log('Key hash:', hashedKey);
    
    // Check if key already exists
    const { data: existing, error: existErr } = await supabase
        .from('api_keys')
        .select('*')
        .eq('key_hash', hashedKey)
        .maybeSingle();
    
    console.log('Existing check:', existing, existErr);
    
    if (existing) {
        console.log('✅ Demo API key already exists:', existing.id);
        return;
    }
    
    // Try insert without label (in case column doesn't exist)
    const { data, error } = await supabase
        .from('api_keys')
        .insert({
            user_id: demoUserId,
            key_hash: hashedKey
        })
        .select()
        .single();
    
    if (error) {
        console.error('❌ Error (no label):', error);
        
        // Try with label
        const { data: data2, error: error2 } = await supabase
            .from('api_keys')
            .insert({
                user_id: demoUserId,
                key_hash: hashedKey,
                label: 'Demo Internal Key'
            })
            .select()
            .single();
        
        if (error2) {
            console.error('❌ Error (with label):', error2);
        } else {
            console.log('✅ Demo API key created (with label):', data2);
        }
    } else {
        console.log('✅ Demo API key created:', data);
    }
}

addDemoApiKey();
